/* 整个页面包裹容器 */
.searchContainer {
  padding: 0 20rpx;
}

/* 头部搜索区域 */
.header {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 20rpx 0;
}

.icon-xiangzuo {
  width: 60rpx;
}

.search {
  width: 80rpx;
  text-align: center;
}

.searchInput {
  position: relative;
  flex: 1;
  margin: 0 20rpx;
  border-radius: 30rpx;
  background-color: rgba(237, 237, 237, 1);
}

.searchInput input {
  position: absolute;
  left: 50rpx;
  height: 60rpx;
}

.searchIcon {
  position: absolute;
  left: 15rpx;
}

.icon-qingkong {
  position: absolute;
  right: 20rpx;
  z-index: 100;
  color: #80808e;

}

/* 搜索内容展示 */
.searchContainer .searchContent {
  height: 80rpx;
  line-height: 80rpx;
  color: #d43d33;
  font-size: 24rpx;
  border-bottom: 1px solid #d43d33;
}

.searchContainer .searchItem {
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
}

.searchItem .content {
  flex: 1;
  margin-left: 20rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 26rpx;
}

/* 搜索历史记录 */
.historyHead {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
}

.historyHead .title {
  font-size: 28rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.historyHead .icon-shanchu {
  font-size: 28rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.historyList {
  display: flex;
  flex-wrap: wrap;
}

.historyItem {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  background-color: #ededed;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
  border-radius: 20rpx;
}

/* 热搜榜 */
.hot .title {
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #eee;
}

.hotList {
  display: flex;
  flex-wrap: wrap;
}

.hotItem {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}

.hotItem .order {
  margin: 0 10rpx;
}

.hotItem .hotIcon {
  width: 35rpx;
  height: 20rpx;
  margin-left: 10rpx;
}