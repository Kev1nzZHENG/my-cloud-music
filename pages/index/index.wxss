/* 轮播图 */
.banner {
  width: 100%;
  height: 300rpx;
  background-color: #fff;
}

.banner image {
  width: 100%;
  height: 100%;
}

/* 导航图标 */
.navContainer {
  display: flex;
  background-color: #fff;
}

.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}

.navItem text {
  font-size: 26rpx;
}

.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: rgb(240, 19, 19);
  font-size: 50rpx;
  color: #fff;
  margin: 20rpx 0;
}

/* 推荐模块 */
.recommend {
  padding: 20rpx;
  background-color: #fff;
}

/* 推荐  内容区域 */
.scrollItem {
  display: flex;
  height: 300rpx;
}

.recommendContent {
  width: 200rpx;
  margin-right: 20rpx;
}

.recommendContent image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.recommendContent text {
  font-size: 26rpx;
  /* 多行文本溢出隐藏 */
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  /* 设置对其模式 */
  -webkit-line-clamp: 2;
  /* 设置多行的行数 */
}

/* 排行榜 */
.rankList {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #fff;
}

.rankTitle {
  font-size: 30rpx;
  line-height: 80rpx;
}

.rankListSwiper {
  height: 400rpx;
}

.rankListSwiper .swiperItem {
  width: 96%;
  background-color: #fcfcfc;
  border-radius: 15rpx;
}

.musicItem {
  display: flex;
  margin-bottom: 20rpx;
}

.musicItem image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}

.musicItem .order {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.musicItem .songName {
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}