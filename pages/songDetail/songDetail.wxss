/* 返回按钮 */
.icon-xiangzuo {
    position: fixed;
    font-size: 50rpx;
    color: rgb(0, 0, 0);
    z-index: 100;
    left: 30rpx;
    top: 60rpx;
    font-weight: bold;
}

/* 背景 */
.musicBackground {
    width: 100%;
    height: 100%;
    /* 将图片进行高斯模糊化 */
    opacity: 0.8;
    filter: blur(30px);
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    z-index: -1;
}

.songDetailContainer {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.3);
}

.musicName {
    margin-top: 100rpx;
    text-align: center;
    font-size: 34rpx;
    color: #fff;
    font-weight: bold;
}

.singer {
    margin-top: 10rpx;
    font-size: 26rpx;
    text-align: center;
    color: rgb(233, 233, 233);
    font-weight: bold;
}

/* 底座 */
.circle {
    position: relative;
    z-index: 100;
    width: 60rpx;
    height: 60rpx;
    margin: 20rpx 0;
    border-radius: 50%;
    background-color: #fff;
}

/* 摇杆 */
.needle {
    position: relative;
    z-index: 99;
    top: -40rpx;
    left: 60rpx;
    width: 192rpx;
    height: 274rpx;
    transform-origin: 40rpx 0;
    transform: rotate(-20deg);
    transition: transform 0.5s linear;
}

.needleRotate {
    transform: rotate(0deg);
}

/* 磁盘 */
.discContainer {
    position: relative;
    top: -170rpx;
    width: 598rpx;
    height: 598rpx;
    animation: disc 20s linear infinite;
    animation-delay: 1s;
    animation-play-state: paused;
}

.discAnimation {
    animation-play-state: running;
}

@keyframes disc {
    from {}

    to {
        transform: rotate(360deg);
    }
}

.disc {
    width: 100%;
    height: 100%;
}

.musicImg {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
    width: 370rpx;
    height: 370rpx;
    border-radius: 50%;
}

/* 进度条 */
.progress {
    position: absolute;
    display: flex;
    /* left: 80rpx; */
    bottom: 200rpx;
    width: 640rpx;
    height: 80rpx;
    line-height: 80rpx;
}

.bar {
    position: relative;
    width: 450rpx;
    height: 4rpx;
    margin: auto;
    background-color: rgba(0, 0, 0, .4);
}

.currentBar {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
    /* width: 100rpx; */
    /* width: 50%; */
    height: 4rpx;
    background-color: red;
}

.audio-circle {
    position: absolute;
    right: -12rpx;
    top: -4rpx;
    width: 12rpx;
    height: 12rpx;
    border-radius: 50%;
    background-color: #fff;
}

/* 底部控制区域 */
.musicControl {
    position: absolute;
    display: flex;
    width: 100%;
    bottom: 40rpx;
    left: 0;
    border-top: 1rpx solid #fff;
}


.musicControl .iconfont,
.playOrder {
    width: 20%;
    height: 120rpx;
    line-height: 120rpx;
    text-align: center;
    color: #fff;
    font-size: 50rpx;
}

.musicControl .big {
    font-size: 80rpx;
}